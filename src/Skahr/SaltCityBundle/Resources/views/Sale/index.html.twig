{% extends 'SkahrSaltCityBundle::base.html.twig' %}
{% block body -%}
    <h1>Sales list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Text</th>
                <th>Status</th>
                <th>Datecr</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('sale_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.salestext }}</td>
                <td>{{ entity.status }}</td>
                <td>{% if entity.datecr %}{{ entity.datecr|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('sale_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('sale_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('sale_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
