								<li><a href="{{ path('SkahrSaltCityBundle_admin') }}">Админка</a></li>
								<li><a href="{{ path('SkahrSaltCityBundle_logout') }}">Выйти</a></li>
							{% endif %}
						</ul>
					</div>
				</nav>
	</td></tr></table>
			


{% for flashMessage in app.session.flashbag.get('info') %}
	<div class="alert alert-success" role="alert">{{ flashMessage }}</div>
{% endfor %}
{% for flashMessage in app.session.flashbag.get('error') %}
	<div class="alert alert-danger" role="alert">{{ flashMessage }}</div>
{% endfor %}
