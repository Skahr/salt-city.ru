									<li><a href="{{ path('SkahrSaltCityBundle_salt') }}">О соляной пещере</a></li>
									<li><a href="{{ path('SkahrSaltCityBundle_salt_photo') }}">Галерея</a></li>
									<li><a href="{{ path('SkahrSaltCityBundle_salt_indications') }}">Показания</a></li>
