									<li><a href="{{ path('SkahrSaltCityBundle_salt_cert') }}">Сертификаты</a></li>
								</ul>
							</li>
							<li class="{{ app.request.attributes.get('_route') == 'price' ? 'active' }}"><a href="{{ path('SkahrSaltCityBundle_homepage') }}#prices">Цены</a></li>
